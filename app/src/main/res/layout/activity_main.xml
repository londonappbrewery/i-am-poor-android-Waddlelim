<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <ImageView
        android:id="@+id/image_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/coal_desc"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/text_iam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_am"
        android:textSize="50sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="68sp"
        android:layout_marginStart="68sp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poor"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginStart="15sp"
        android:layout_toEndOf="@id/text_iam"
        android:layout_toRightOf="@id/text_iam"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>
